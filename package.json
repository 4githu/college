{
	"name": "college",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": "18.x"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "ROLLUP_SKIP_NODE_RESOLVE=true VITE_SKIP_NATIVE=true NODE_OPTIONS='--max-old-space-size=4096' npm install --force --legacy-peer-deps && vite build",
		"postinstall": "prisma generate",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "1.0.6",
		"@sveltejs/kit": "1.20.4",
		"@sveltejs/vite-plugin-svelte": "2.4.2",
		"@types/bcrypt": "^5.0.2",
		"prisma": "^6.5.0",
		"svelte": "4.0.5",
		"svelte-check": "3.4.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.0.0",
		"vite": "4.4.9"
	},
	"dependencies": {
		"@auth/core": "^0.38.0",
		"@auth/sveltekit": "^1.8.0",
		"@prisma/client": "^6.5.0",
		"bcrypt": "^5.1.1"
	},
	"prisma": {
		"seed": "node prisma/seed.js"
	}
}
